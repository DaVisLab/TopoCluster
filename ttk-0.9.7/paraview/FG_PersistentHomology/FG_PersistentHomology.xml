
<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy 
     name="FG_PersistentHomology" 
     class="ttkFG_PersistentHomology" 
     label="TTK FG_PersistentHomology">
     <Documentation
        long_help="TTK fG_PersistentHomology plugin."
        short_help="TTK fG_PersistentHomology plugin.">
          TTK fG_PersistentHomology plugin documentation.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <InputArrayDomain name="input_scalars" number_of_components="1">
          <Property name="Input" function="FieldDataSelection" />
        </InputArrayDomain>
        <Documentation>
          Data-set to process.
        </Documentation>
      </InputProperty>

      <StringVectorProperty
        name="ScalarField"
        command="SetScalarField"
        number_of_elements="1"
        animateable="0"
        label="Scalar Field"
        >
        <ArrayListDomain
          name="array_list"
          default_values="0">
          <RequiredProperties>
            <Property name="Input" function="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>
          Select the scalar field to process.
        </Documentation>
      </StringVectorProperty>

       <IntVectorProperty
               name="Gradient"
               label="Extract gradient"
               command="SetGradient"
               number_of_elements="1"
               default_values="0" panel_visibility="advanced">
           <BooleanDomain name="bool"/>
           <Documentation>
               Extract the discrete gradient explicitly.
           </Documentation>
       </IntVectorProperty>

       <IntVectorProperty
               name="Persistence Diagram"
               label="Pers. Diagram in txt file"
               command="SetPairs"
               number_of_elements="1"
               default_values="0" panel_visibility="advanced">
           <BooleanDomain name="bool"/>
           <Documentation>
               Extract the discrete gradient explicitly.
           </Documentation>
       </IntVectorProperty>
      
      <IntVectorProperty
         name="cycles1"
         label="Extract 1 cycles"
         command="Setcycles1"
         number_of_elements="1"
         default_values="0" panel_visibility="advanced">
        <BooleanDomain name="bool"/>
         <Documentation>
          Extract 1 cycles for all persistence pairs.
         </Documentation>
      </IntVectorProperty>
      
      <IntVectorProperty
         name="cycles2"
         label="Extract 2 cycles"
         command="Setcycles2"
         number_of_elements="1"
         default_values="0" panel_visibility="advanced">
        <BooleanDomain name="bool"/>
         <Documentation>
          Extract 2 cycles for all persistence pairs.
         </Documentation>
      </IntVectorProperty>

       <IntVectorProperty
               name="formanCycles"
               label="Cycles for DMC"
               command="SetformanCycles"
               number_of_elements="1"
               default_values="0" panel_visibility="advanced">
           <BooleanDomain name="bool"/>
           <Documentation>
               Extract cycles using the discrete Morse complex.
           </Documentation>
       </IntVectorProperty>

      <DoubleVectorProperty
         name="MinPers"
         label="Min Pesistence"
         command="SetMinPers"
         number_of_elements="1"
         default_values="0" panel_visibility="advanced">
        <DoubleRangeDomain name="range" min="0" max="1"/>
         <Documentation>
          Set the minimum persistence value for extracting cycles and persistence pairs.
         </Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
         name="MaxPers"
         label="Max Pesistence"
         command="SetMaxPers"
         number_of_elements="1"
         default_values="1" panel_visibility="advanced">
        <DoubleRangeDomain name="range" min="0" max="1"/>
         <Documentation>
          Set the minimum persistence value for extracting cycles and persistence pairs.
         </Documentation>
      </DoubleVectorProperty>


      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="ScalarField" />
      </PropertyGroup>

       <PropertyGroup panel_widget="Line" label="Output options">
           <Property name="formanCycles" />
           <Property name="cycles1" />
           <Property name="cycles2" />
           <Property name="MinPers" />
           <Property name="MaxPers" />
       </PropertyGroup>

       <PropertyGroup panel_widget="Line" label="Debug options">
           <Property name="Gradient" />
           <Property name="Persistence Diagram"/>
       </PropertyGroup>

       <OutputPort name="Persistence Pairs" index="0" id="port0"/>
       <OutputPort name="Persistence Diagram" index="1" id="port1"/>
       <OutputPort name="Homology" index="2" id="port2"/>
       <OutputPort name="1-Cycles" index="3" id="port3"/>
       <OutputPort name="2-cycles" index="4" id="port4"/>
       <OutputPort name="Gradient" index="5" id="port5"/>


      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>
   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
